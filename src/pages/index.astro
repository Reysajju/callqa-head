---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <header class="fixed w-full z-50 glass">
    <nav class="max-w-6xl mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text">
          CallQA
        </a>
        <div class="hidden md:flex items-center space-x-8">
          <a href="#features" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Features</a>
          <a href="#benefits" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Benefits</a>
          <a href="#faq" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">FAQ</a>
          <a 
            href="https://callqa.magnatesempire.com"
            class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"
          >
            Get Started
          </a>
        </div>
        <button class="md:hidden text-gray-600 dark:text-gray-300" id="menuButton">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <div class="hidden md:hidden" id="mobileMenu">
        <div class="flex flex-col space-y-4 mt-4">
          <a href="#features" class="text-gray-600 dark:text-gray-300">Features</a>
          <a href="#benefits" class="text-gray-600 dark:text-gray-300">Benefits</a>
          <a href="#faq" class="text-gray-600 dark:text-gray-300">FAQ</a>
          <a 
            href="https://callqa.magnatesempire.com"
            class="bg-blue-600 text-white px-6 py-2 rounded-lg text-center"
          >
            Get Started
          </a>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center pt-20 px-6 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-900 dark:to-gray-800">
      <div class="max-w-6xl mx-auto text-center" data-aos="fade-up">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text animate-gradient">
          Transform Audio into Actionable Insights
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          CallQA uses advanced AI to transcribe, analyze, and extract valuable insights from your audio files. Perfect for call centers, meetings, and quality assurance.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a 
            href="https://callqa.magnatesempire.com"
            class="inline-block bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Get Started Now
          </a>
          <a 
            href="#features"
            class="inline-block bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-50 transition-all hover:scale-105 shadow-lg hover:shadow-xl dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700"
          >
            Learn More
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 px-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 dark:text-white" data-aos="fade-up">Key Features</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="p-8 rounded-2xl shadow-neu-light dark:shadow-neu-dark bg-white dark:bg-gray-800 transform hover:-translate-y-2 transition-all" data-aos="fade-up" data-aos-delay="100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
            </svg>
            <h3 class="text-xl font-semibold mb-3 dark:text-white">Audio Transcription</h3>
            <p class="text-gray-600 dark:text-gray-300">Convert audio files into accurate text with timestamps using advanced AI technology.</p>
          </div>
          <div class="p-8 rounded-2xl shadow-neu-light dark:shadow-neu-dark bg-white dark:bg-gray-800 transform hover:-translate-y-2 transition-all" data-aos="fade-up" data-aos-delay="200">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <h3 class="text-xl font-semibold mb-3 dark:text-white">Smart Analysis</h3>
            <p class="text-gray-600 dark:text-gray-300">Automatically analyze transcriptions based on your custom SOPs and requirements.</p>
          </div>
          <div class="p-8 rounded-2xl shadow-neu-light dark:shadow-neu-dark bg-white dark:bg-gray-800 transform hover:-translate-y-2 transition-all" data-aos="fade-up" data-aos-delay="300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="text-xl font-semibold mb-3 dark:text-white">Detailed Reports</h3>
            <p class="text-gray-600 dark:text-gray-300">Get comprehensive reports with actionable insights stored in your profile.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section id="benefits" class="py-20 px-6 bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-800">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 dark:text-white" data-aos="fade-up">Why Choose CallQA?</h2>
        <div class="grid md:grid-cols-2 gap-12">
          <div class="space-y-6" data-aos="fade-right">
            <div class="p-6 glass rounded-lg transform hover:scale-105 transition-all">
              <h3 class="font-semibold mb-2 dark:text-white">Save Time and Resources</h3>
              <p class="text-gray-600 dark:text-gray-300">Automate your quality assurance process and reduce manual review time by up to 80%.</p>
            </div>
            <div class="p-6 glass rounded-lg transform hover:scale-105 transition-all">
              <h3 class="font-semibold mb-2 dark:text-white">Improve Accuracy</h3>
              <p class="text-gray-600 dark:text-gray-300">AI-powered analysis ensures consistent evaluation across all calls and conversations.</p>
            </div>
          </div>
          <div class="space-y-6" data-aos="fade-left">
            <div class="p-6 glass rounded-lg transform hover:scale-105 transition-all">
              <h3 class="font-semibold mb-2 dark:text-white">Easy Integration</h3>
              <p class="text-gray-600 dark:text-gray-300">Seamlessly integrate with your existing workflow and tools.</p>
            </div>
            <div class="p-6 glass rounded-lg transform hover:scale-105 transition-all">
              <h3 class="font-semibold mb-2 dark:text-white">Secure Storage</h3>
              <p class="text-gray-600 dark:text-gray-300">All your transcriptions and reports are securely stored and easily accessible in your profile.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section id="faq" class="py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 dark:text-white" data-aos="fade-up">Frequently Asked Questions</h2>
        <div class="space-y-6">
          {[
            {
              q: "What is CallQA and how does it work?",
              a: "CallQA is an AI-powered audio transcription and analysis platform that converts speech to text and provides detailed insights. It uses advanced machine learning algorithms to transcribe audio files and analyze them based on your specific requirements."
            },
            {
              q: "What types of audio files can I analyze with CallQA?",
              a: "CallQA supports various audio formats including MP3, WAV, M4A, and more. It's ideal for analyzing customer service calls, meetings, interviews, and any other voice recordings."
            },
            {
              q: "How accurate is the transcription?",
              a: "Our AI-powered transcription system achieves an accuracy rate of up to 95% for clear audio recordings. The accuracy may vary depending on factors such as audio quality, background noise, and accent clarity."
            },
            {
              q: "Is my data secure with CallQA?",
              a: "Yes, we take data security seriously. All audio files and transcriptions are encrypted both in transit and at rest. We comply with industry-standard security protocols and data protection regulations."
            },
            {
              q: "How long does it take to transcribe an audio file?",
              a: "Transcription time depends on the audio file length and quality. Typically, a 1-hour recording is transcribed within 5-10 minutes."
            },
            {
              q: "Can I customize the analysis criteria?",
              a: "Yes, CallQA allows you to set custom parameters and keywords for analysis based on your specific needs and standard operating procedures."
            },
            {
              q: "Do you offer integration with other tools?",
              a: "Yes, CallQA provides API access and integrates with popular CRM systems, call center software, and communication platforms."
            },
            {
              q: "What languages does CallQA support?",
              a: "Currently, CallQA supports transcription and analysis in multiple languages including English, Spanish, French, German, and more."
            },
            {
              q: "How do I get started with CallQA?",
              a: "Simply sign up for an account on our website, choose a subscription plan, and start uploading your audio files for analysis."
            },
            {
              q: "Is there a free trial available?",
              a: "Yes, we offer a 14-day free trial with full access to all features so you can experience the benefits of CallQA firsthand."
            },
            {
              q: "What kind of reports does CallQA generate?",
              a: "CallQA generates comprehensive reports including transcription text, sentiment analysis, keyword tracking, compliance scoring, and custom metrics based on your requirements."
            },
            {
              q: "Can I export the transcriptions and reports?",
              a: "Yes, you can export transcriptions and reports in various formats including PDF, CSV, and JSON for easy integration with your existing systems."
            },
            {
              q: "How does CallQA handle poor audio quality?",
              a: "Our AI system is trained to handle various audio qualities and can still provide accurate transcriptions even with moderate background noise or unclear audio."
            },
            {
              q: "What support options are available?",
              a: "We offer 24/7 customer support through email, live chat, and phone. Our team is always ready to help with any questions or technical issues."
            },
            {
              q: "Can multiple team members access the same account?",
              a: "Yes, CallQA supports team collaboration with different access levels and permissions for various team members."
            },
            {
              q: "How does pricing work?",
              a: "Our pricing is based on usage volume and features needed. We offer flexible plans that can be customized to your specific requirements."
            },
            {
              q: "Is there a limit on file size or duration?",
              a: "Standard accounts can upload files up to 2GB in size or 4 hours in duration. Enterprise accounts have higher limits and custom options available."
            },
            {
              q: "Can CallQA identify different speakers in a conversation?",
              a: "Yes, our speaker diarization feature can distinguish between different speakers in a conversation for more accurate transcription and analysis."
            },
            {
              q: "How does CallQA handle sensitive information?",
              a: "CallQA includes automatic PII (Personally Identifiable Information) detection and redaction features to protect sensitive information in transcriptions."
            },
            {
              q: "What makes CallQA different from other transcription services?",
              a: "CallQA combines advanced AI transcription with intelligent analysis tools, providing not just accurate transcriptions but actionable insights for business improvement."
            }
          ].map((faq, index) => (
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg" data-aos="fade-up" data-aos-delay={index * 50}>
              <h3 class="text-lg font-semibold mb-2 dark:text-white">{faq.q}</h3>
              <p class="text-gray-600 dark:text-gray-300">{faq.a}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-6 bg-gradient-to-r from-blue-600 to-purple-600 animate-gradient">
      <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl font-bold mb-6 text-white">Ready to Transform Your Audio Analysis?</h2>
        <p class="text-xl mb-8 text-white opacity-90">Join businesses that trust CallQA for their audio transcription and analysis needs.</p>
        <a 
          href="https://callqa.magnatesempire.com"
          class="inline-block bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-all hover:scale-105 shadow-lg hover:shadow-xl"
        >
          Start Your Free Trial
        </a>
      </div>
    </section>
  </main>

  <footer class="py-8 px-6 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto text-center text-gray-600 dark:text-gray-400">
      <p>&copy; {new Date().getFullYear()} CallQA. All rights reserved.</p>
    </div>
  </footer>
</Layout>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (!target.closest('#menuButton') && !target.closest('#mobileMenu')) {
      mobileMenu?.classList.add('hidden');
    }
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>